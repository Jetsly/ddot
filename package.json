{
  "private": true,
  "workspaces": [
    "packages/*",
    "example/*"
  ],
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "commitizen": "^3.0.4",
    "concurrently": "^4.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.1.2",
    "lerna": "^3.4.3",
    "lint-staged": "^7.3.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "changelog": "lerna-changelog",
    "build": "lerna run build",
    "watch-plugin-webpack":"yarn workspace @ddot/ddot-plugin-webpack watch",
    "watch-plugin-react":"yarn workspace @ddot/ddot-plugin-react watch",
    "watch-plugin-utils":"yarn workspace @ddot/plugin-utils watch",
    "watch-cli":"yarn workspace @ddot/ddot-cli watch",
    "watch":"concurrently \"npm:watch-*\"",
    "commit": "git-cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "tslint --fix -p .",
      "git add"
    ]
  }
}
